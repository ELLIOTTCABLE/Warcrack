	<Frame name="DalaranUniversity_Main" enableMouse="true" movable="true" parent="UIParent">
		<Size>
			<AbsDimension x="150" y="200"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<BackgroundInsets>
				<AbsInset top="4" left="4" bottom="4" right="4"/>
			</BackgroundInsets>
			<Color r="0" g="0" b="0" a="0.8"/>
		</Backdrop>
		<Scripts>
			<OnMouseDown>
				if (not self.isLocked and button == "LeftButton") then
					self:StartMoving();
					self.isMoving = true;
				end;
			</OnMouseDown>
			<OnMouseUp>
				if (self.isMoving and button == "LeftButton") then
					self:StopMovingOrSizing();
					self.isMoving = false;
				else
					DalaranUniversity.Main.OnMouseUp(self, button);
				end;
			</OnMouseUp>
			<OnHide>
				if (self.isMoving) then
					self:StopMovingOrSizing();
					self.isMoving = false;
				end;
			</OnHide>
			<OnLoad>
				DalaranUniversity.Main.OnLoad(self);
			</OnLoad>
			<OnEvent function="DalaranUniversity_OnEvent" />
			<OnUpdate>
				DalaranUniversity.Main.OnUpdate(self);
			</OnUpdate>
		</Scripts>
		<Layers>
			<Layer level="BORDER">
				<FontString name="$parent_Title" inherits="SystemFont_Med1" text="DalaranUniversity_Main_TitleText">
					<Anchors>
